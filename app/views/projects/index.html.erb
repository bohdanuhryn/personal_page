<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Started at</th>
      <th>Web url</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.title, project.web_url %></td>
        <td><%= project.description %></td>
        <td><%= project.started_at %></td>
        <td><%= link_to project.web_url, project.web_url %></td>
        <td>
          <%= project.image_url %>
          <br/>
          <%= image_tag project.image_url, alt: "No image", style: "max-height: 300px" %>
        </td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

